@model IEnumerable<_4fitClub.Models.Exercicios>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Exercícios</h3>
    @if (User.IsInRole("Manager"))
    {
        <p>
            @Html.ActionLink("Adicionar Exercícios", "Create")
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Categoria")
                @*Html.DisplayNameFor(model => model.Categoria.Nome)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objetivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Objetivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passos)
                </td>
                <td>
                    @if (User.IsInRole("Manager"))
                    {
                        <text>
                            @Html.ActionLink("Editar Exercício", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Remover Exercício", "Delete", new { id = item.ID }) |
                        </text>
                    }
                    @Html.ActionLink("Detalhes do Exercício", "Details", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
