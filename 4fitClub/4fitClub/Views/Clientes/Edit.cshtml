@model _4fitClub.Models.Cliente



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm("Edit", "Clientes", FormMethod.Post,new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h3>Cliente</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.Imagem)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="~/UserImages/@Model.Imagem" target="_blank">
                    <img src="~/UserImages/@Model.Imagem" width="200" />
                </a>
                <input type="file" name="uploadImagemEdit"
                       style="color:blue;" accept="image/*" />
                @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
    
        <div>
            @if (User.IsInRole("Utilizador"))
            {
                @Html.ActionLink("Voltar ao Perfil", "Index", "Manage", null, null)
            }
            @if (User.IsInRole("Manager")){
                @Html.ActionLink("Voltar ao Perfil", "Index")
            }


        </div>
</body>
</html>
