@model _4fitClub.Models.Cliente


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhes do Cliente</title>
</head>
<body>
    <div>
        <h3>Cliente</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Imagem)
            </dt>

            <dd>
                <a href="~/UserImages/@Model.Imagem" target="_blank">
                    <img src="~/UserImages/@Model.Imagem" width="200" />
                </a>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
        <div class="form-group">
            <b>@Html.DisplayName("Os meus planos:")</b>
            <ul>
                @foreach (var item in Model.ListaDePlanos.OrderBy(p => p.Nome))
                {
                    <li>@Html.DisplayFor(model => item.Nome)</li>
                }
            </ul>
        </div>
    </div>
    <p>
        @Html.ActionLink("Editar Cliente", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Voltar atrás", "Index")
    </p>
</body>
</html>
