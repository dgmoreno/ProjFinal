@model IEnumerable<_4fitClub.Models.Imagens>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Multimédia</h3>
    <p>
        @Html.ActionLink("Adicionar Multimédia", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Exercício")
                @*Html.DisplayNameFor(model => model.Exercicio.Nome)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordem)
            </th>
            <th>
                @Html.DisplayName("Tipo de multimédia")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exercicio.Nome)
                </td>
                <td>
                    @*Html.DisplayFor(modelItem => item.Nome)*@
                    <a href="~/multimedia/@item.Nome" target="_blank">
                        <img src="~/multimedia/@item.Nome" width="190" />
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.ActionLink("Editar detalhes Multimédia", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalhes Multimédia", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar Multimédia", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
